<div class="container">
  <div class="card-white">
    <h1>New Review</h1>
  </div>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
    <%= f.input :content%>
    <%= f.submit %>
  <% end %>
  <div class="card-white">
    <%= link_to "restaurant page", restaurant_path(@restaurant.id), class:"btn btn-primary"  %>
  </div>
</div>
